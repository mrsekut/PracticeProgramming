
(* 関数 *)
Bin[m_] := Module[{b, q, r},
  b = {};
  {q, r} = QuotientRemainder[m, 2];
  PrependTo[b, r];
  While[q != 0,
    {q, r} = QuotientRemainder[q, 2];
    PrependTo[b, r];
  ];
  Return[b];
];


